<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.Add_Assumption_HoldActivity"
    android:padding="16dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Material Dropdown -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Selected Material"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epNumber1" />

        <TextView
            android:id="@+id/selectedMaterial2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wheat Straw Loose Biomass"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <!-- Moisture Assumption -->
        <EditText
            android:id="@+id/et_moistureAssumptionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Moisture Assumption"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Moisture Hold -->
        <EditText
            android:id="@+id/et_moistureHoldL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Moisture Hold"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Sand Assumption -->
        <EditText
            android:id="@+id/et_sandAssumptionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sand Assumption"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Sand Hold -->
        <EditText
            android:id="@+id/et_sandHoldL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sand Hold"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Mud Piece Assumption -->
        <EditText
            android:id="@+id/et_mudPieceAssumptionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mud Piece Assumption"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Mud Piece Hold -->
        <EditText
            android:id="@+id/et_mudPieceHoldL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mud Piece Hold"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Burrays Assumption -->
        <EditText
            android:id="@+id/et_burraysAssumptionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Burrays Assumption"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Burrays Hold -->
        <EditText
            android:id="@+id/et_burraysHoldL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Burrays Hold"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Fines Assumption -->
        <EditText
            android:id="@+id/et_finesAssumptionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fines Assumption"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <!-- Fines Hold -->
        <EditText
            android:id="@+id/et_finesHoldL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fines Hold"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/buttonupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Update" />

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
