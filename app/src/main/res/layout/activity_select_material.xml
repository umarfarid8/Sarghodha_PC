<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.SelectMaterial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Material"
                android:textColor="#176AB5"
                app:itemTextColor="@color/check_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <!-- List of Materials -->
            <TextView
                android:id="@+id/material1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Brassica Straw Loose"
                app:itemTextColor="@color/check_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#176AB5"
                android:textColor="@color/white"

                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/material2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Wheat Straw Loose CTMP"
                app:itemTextColor="@color/check_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#176AB5"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/material3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Wheat Straw Loose Biomass"
                app:itemTextColor="@color/check_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#176AB5"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/material4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Linseed Straw Loose"
                app:itemTextColor="@color/check_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#176AB5"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/material5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Corn Stalks"
                app:itemTextColor="@color/check_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#176AB5"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
